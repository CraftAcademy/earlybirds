.allarticlelist
  - if user_signed_in?
    - @articles.each do |article|
      %div{id: dom_id(article)}
        #header
          %p= article.header
        #subheader
          %p= article.subheader
        #body
          %p= article.body
        #imageplaceholder
          = image_tag("trump.jpg")
  - else
    - @articles.each do |article|
      - if article.free?
        %div{id: dom_id(article)}
          #header
            %p= article.header
          #subheader
            %p= article.subheader
          #body
            %p= article.body
          #imageplaceholder
            = image_tag("trump.jpg")
