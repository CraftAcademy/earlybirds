.nav
  = render partial: 'partials/navigation'
- @categories.each do |category|
  = link_to category.name, root_path(category: category.id)

%div.font-thin.text-base
  %p News
  - @apigeneral.each do | feed |
    %div.max-w-sm.rounded.overflow-hidden.shadow-lg
      %h5= feed.title
      %img.w-full{:src => "#{feed.urlToImage}", :width => "300px"}/
      %p.article-content= feed.description
      %p.article-author= feed.author

